{
  "title": "joshtreepark custom keybindings",
  "rules": [
    {
      "description": "Simultaneously press right and left shift to enable caps_lock (broken)", 
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "right_shift"
              },
              {
                "key_code": "left_shift"
              }
            ],
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    },
    {
      "description": "Toggle caps_lock by holding left_shift then pressing right_shift",
      "manipulators": [
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {"key_code": "caps_lock"}
          ],
          "to_if_alone": [
            {"key_code": "right_shift"}
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change caps_lock to esc/command",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }, 
    {
      "description": "Hold space for control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ]
        }
      ]
    },
    {
       "description": "fn+# will set input_source (change keyboard language)",
       "manipulators": [
           {
               "from": {
                   "key_code": "0",
                   "modifiers": { "mandatory": ["fn"] }
               },
               "to": [{ "shell_command": "/usr/local/bin/macism com.apple.keylayout.USExtended 0" }],
               "type": "basic"
           },
           {
               "from": {
                   "key_code": "9",
                   "modifiers": { "mandatory": ["fn"] }
               },
               "to": [{ "shell_command": "/usr/local/bin/macism com.apple.inputmethod.Korean.2SetKorean 0" }],
               "type": "basic"
           },
           {
               "from": {
                   "key_code": "8",
                   "modifiers": { "mandatory": ["fn"] }
               },
               "to": [{ "shell_command": "/usr/local/bin/macism com.apple.inputmethod.SCIM.ITABC 0" }],
               "type": "basic"
           },
           {
               "from": {
                   "key_code": "7",
                   "modifiers": { "mandatory": ["fn"] }
               },
               "to": [{ "shell_command": "/usr/local/bin/macism com.apple.inputmethod.TCIM.Pinyin" }],
               "type": "basic"
           }
       ]
    }
  ]
}
